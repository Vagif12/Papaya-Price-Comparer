{

  "manifest_version": 2,
  "name": "Papaya Price Comparer",
  "description": "Compare Amazon Product Prices within the EU in seconds!",
  "version": "0.7.1",
  "icons": { "16":  "Amazon16.png",
			 "32":  "Amazon32.png",
			 "128": "Amazon128.png" },
  "content_scripts": [
    {
      "matches": [  "*://www.amazon.co.uk/*",
					"*://www.amazon.com/*",
					"*://www.amazon.fr/*",
					"*://www.amazon.de/*",
					"*://www.amazon.es/*",
					"*://www.amazon.it/*"
				],
      "exclude_matches": [  "*://www.amazon.co.uk/gp/buy/*",
					"*://www.amazon.com/gp/buy/*",
					"*://www.amazon.fr/gp/buy/*",
					"*://www.amazon.de/gp/buy/*",
					"*://www.amazon.es/gp/buy/*",
					"*://www.amazon.it/gp/buy/*"
				],
      "js": ["jquery.min.js","script.js","jquery.translate.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": [ 	"*://www.amazon.co.uk/*",
					"*://www.amazon.com/*",
					"*://www.amazon.fr/*",
					"*://www.amazon.de/*",
					"*://www.amazon.es/*",
					"*://www.amazon.it/*",
					"storage"
				],
  "web_accessible_resources": [
    "img/*",
    "img/UK.png",
    "img/US.png",
    "img/CA.png",
    "img/DE.png",
    "img/FR.png",
    "img/ES.png",
    "img/IT.png",
    "img/progress.gif",
    "img/gear.png",
	"options.html",
    "jquery-2.0.2.min.map"
  ]
}